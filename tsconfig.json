{
  "compilerOptions": {
    "rootDir": "ts-src",
    "outDir": "dist",
    "declarationDir": "lib",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "declaration": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "configFile": "./tslint.json"
      }
    ]
  }
}
